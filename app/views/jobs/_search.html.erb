<div class="container-fluid">
  <%= search_form_for @q do |f| %>
    <div class="form-space theme-form row">
      <div class="col-auto">
        <%= f.search_field :title_cont, class: 'form-control', placeholder: 'Job title' %>
      </div>
    
      <div class="col-auto">
        <%= f.search_field :department_cont, class: 'form-control', placeholder: 'Department' %>
      </div>

      <div class="col-auto">
        <%= f.search_field :province_cont, class: 'form-control', placeholder: 'Province' %>
      </div>
    
      <div class="col-auto">
        <%= f.submit "Search" , class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

