  <!-- New Theme -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="viho admin is super flexible, powerful, clean &amp; modern responsive bootstrap 4 admin template with unlimited possibilities.">
    <meta name="keywords" content="admin template, viho admin template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="pixelstrap">

    <link rel="icon" href="<%#= image_path('favicon.png') %>" type="image/png">
    <link rel="shortcut icon" href="<%#= image_path('favicon.png') %>" type="image/x-icon">

    <title>Pakistan's Forum</title>
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    
    <!-- Font Awesome-->
    <%= stylesheet_link_tag 'fontawesome', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- ico-font-->
    <%= stylesheet_link_tag 'icofont', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Themify icon-->
    <%= stylesheet_link_tag 'themify', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Flag icon-->
    <%= stylesheet_link_tag 'flag-icon', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Feather icon-->
    <%= stylesheet_link_tag 'feather-icon', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap css-->
    <%= stylesheet_link_tag 'bootstrap', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- App css-->
    <%= stylesheet_link_tag 'style', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'color-1', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Responsive css-->
    <%= stylesheet_link_tag 'responsive', rel: 'stylesheet', type: 'text/css', media: 'all', 'data-turbolinks-track': 'reload' %>
    
</head>
  <body>
    <!-- Loader starts-->
    <div class="loader-wrapper">
      <div class="theme-loader">    
        <div class="loader-p"></div>
      </div>
    </div>
    <!-- Loader ends-->
    <!-- page-wrapper Start-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-5">
            <%= image_tag('login.jpg', {class: 'bg-img-cover bg-center'}) %>
        </div>
        <div class="col-xl-7 p-0">
          <div class="login-card">

            <%= form_tag '/login', {class: 'theme-form login-form needs-validation'} do %>
                <h4>Login</h4>
                <h6>Welcome back! Log in to your account.</h6>

                <div class="form-group">
                    <!-- <%= label_tag :email%> -->
                    <label>Email Address</label>
                    <div class="input-group"><span class="input-group-text"><i class="icon-email"></i></span>
                        <!-- <%= text_field_tag :email, placeholder: "example@gmail.com", :required => true, class: "form-control" %> -->
                        <input class="form-control" type="email" required="" placeholder="example@gmail.com">
                        <div class="invalid-tooltip">Please enter proper email.</div>
                    </div>
                </div>

                <div class="form-group">
                    <!-- <%= label_tag :password%> -->
                    <label>Password</label>
                    <div class="input-group"><span class="input-group-text"><i class="icon-lock"></i></span>
                    <!-- <%= password_field_tag :password, class: "form-control", :required => true %> -->
                      <input class="form-control" type="password" name="login[password]" required="" placeholder="*********">
                      <div class="invalid-tooltip">Please enter password.</div>
                      <div class="show-hide"><span class="show"></span></div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                      <input id="checkbox1" type="checkbox">
                      <label class="text-muted" for="checkbox1">Remember password</label>
                    </div><a class="link" href="forget-password.html">Forgot password?</a>
                </div>

                <div class="form-group">
                    <!-- <%= submit_tag "Sign in", class: "btn btn-primary btn-block" %> -->
                    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                </div>
                <div class="login-social-title">                
                    <h5>Sign in with</h5>
                </div>
                <div class="form-group">
                <ul class="login-social">
                    <li><a href="https://www.linkedin.com/login" target="_blank"><i data-feather="linkedin"></i></a></li>
                    <li><a href="https://www.linkedin.com/login" target="_blank"><i data-feather="twitter"></i></a></li>
                    <li><a href="https://www.linkedin.com/login" target="_blank"><i data-feather="facebook"></i></a></li>
                    <li><a href="https://www.instagram.com/login" target="_blank"><i data-feather="instagram"></i></a></li>
                </ul>
                </div>
                <p>Don't have account?<a class="ms-2" href="sign-up.html">Create Account</a></p>
            <%end%>
            <!-- <form class="theme-form login-form needs-validation" novalidate="">
            </form> -->
          </div>
        </div>
      </div>
    </div>

    <script>
      (function() {
      'use strict';
      window.addEventListener('load', function() {
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.getElementsByClassName('needs-validation');
      // Loop over them and prevent submission
      var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
      if (form.checkValidity() === false) {
      event.preventDefault();
      event.stopPropagation();
      }
      form.classList.add('was-validated');
      }, false);
      });
      }, false);
      })();
    </script>
    
    <!-- latest jquery-->
    <%= javascript_include_tag "jquery-3.5.1.min" %>
    <!-- feather icon js-->
    <%= javascript_include_tag "feather.min" %>
    <%= javascript_include_tag "feather-icon" %>
    <!-- Sidebar jquery-->
    <%= javascript_include_tag "sidebar-menu" %>
    <%= javascript_include_tag "config" %>
    <!-- Bootstrap js-->
    <%= javascript_include_tag "popper.min" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <!-- Plugins JS start-->

    <%= javascript_include_tag "script" %>
    <!-- login js-->
    <!-- Plugin used-->
  </body>
</html>